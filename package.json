{
  "name": "mldock",
  "description": "a NodeJS/TypeScript library and cli to download MarkLogic rpms and build docker images hosting MarkLogic Server 8+",
  "author": "Daphne Maddox <laurelnaiad@gmail.com>",
  "publisher": "laurelnaiad",
  "license": "MIT",
  "version": "0.0.0-0",
  "main": "index.js",
  "types": "index.d.ts",
  "bin": {
    "mldock": "cli/cli.js",
    "mldock-download": "cli/cli-download.js",
    "mldock-install": "cli/cli-install.js"
  },
  "bugs": {
    "url": "https://github.com/laurelnaiad/mldock/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/laurelnaiad/mldock.git"
  },
  "engines": {
    "npm": ">=2.0.0",
    "node": ">= 6.5.0"
  },
  "dependencies": {
    "@types/dockerode": "^2.4.5",
    "@types/request": "^2.0.1",
    "commander": "^2.11.0",
    "dockerode": "^2.5.0",
    "fs-extra": "^4.0.1",
    "log-update": "^2.1.0",
    "request": "^2.81.0",
    "request-progress": "^3.0.0",
    "tar-fs": "^1.15.3"
  },
  "scripts-info": {
    "info": "list the high-level npm scripts",
    "cleanup": "rm -rf the build, and dist and coverage directories",
    "dist": "build src to dist directory, bringing relevant portions of package.json for npm publishing",
    "test": "run tests and report code coverage into the covarege directory"
  },
  "scripts": {
    "preversion": "npm-run-all test",
    "version": "npm-run-all clean_dist dist",
    "coverage": "node_modules/.bin/nyc report --reporter=text-lcov > coverage.lcov && node_modules/.bin/codecov",
    "test": "shx rm -rf coverage && node_modules/.bin/nyc node_modules/.bin/mocha ./test/index.unit.ts",
    "info": "npm-scripts-info",
    "dist": "tsc -p src && shx mkdir -p dist/dockerFiles && shx cp -R src/dockerFiles/* dist/dockerFiles/ && node scripts/makePackage.js",
    "cleanup": "npm-run-all clean_build clean_cover",
    "clean_build": "shx rm -rf build",
    "clean_cover": "shx rm -rf coverage",
    "clean_dist": "shx rm -rf dist",
    "prepare_version": "npm version prerelease && npm pack dist"
  },
  "devDependencies": {
    "@types/chai": "^4.0.3",
    "@types/fs-extra": "^4.0.0",
    "@types/mocha": "^2.2.41",
    "chai": "^4.1.1",
    "codecov": "^2.3.0",
    "dotenv": "^4.0.0",
    "get-port": "^3.2.0",
    "graceful-fs": "^4.1.11",
    "ip": "^1.1.5",
    "mocha": "^3.5.0",
    "npm-run-all": "^4.0.2",
    "npm-scripts-info": "^0.3.6",
    "nyc": "^11.1.0",
    "shx": "^0.2.2",
    "source-map-support": "^0.4.16",
    "ts-node": "^3.3.0",
    "typescript": "^2.4.2"
  },
  "nyc": {
    "timeout": 10000,
    "extension": [
      ".ts"
    ],
    "include": [
      "**/src/**/*.ts"
    ],
    "reporter": [
      "text",
      "lcov",
      "html"
    ],
    "exclude": [
      "**/*.d.ts"
    ],
    "require": [
      "source-map-support/register",
      "ts-node/register"
    ],
    "sourceMap": true,
    "instrument": true
  }
}
